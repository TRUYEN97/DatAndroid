<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MainLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".impActivity.MainActivity">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:columnCount="2"
            app:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btDT"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Đường trường\n(Số sàn)"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btDTB1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Đường trường\n(Số tự động)"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btSh"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Sa hình - B\n(Số sàn)"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btShB1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Sa hình - B\n(Số tự động)"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btShC"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Sa hình - C"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btShD"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Sa hình - D"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btShE"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:text="Sa hình - E"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                tools:ignore="HardcodedText" />

        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>